
set spoolfile = "+univie/INBOX"
set from = "thomas.torsney-weir@univie.ac.at"
set sendmail = "msmtp -a univie"
set mbox = "+univie/archive"
set postponed = "+univie/drafts"
set trash="+univie/trash"
set record="+univie/sent"

color status cyan default

macro index A \
  "<save-message>+univie/archive<enter>" \
  "archive message"

macro index S \
  "<save-message>+univie/spam<enter>" \
  "mark message as spam"

