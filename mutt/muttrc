account-hook . 'unset preconnect imap_user imap_pass imap_authenticators; set ssl_starttls=ask-yes'

# gmail
account-hook imaps://imap.gmail.com 'set imap_user=torsneyt@gmail.com imap_pass=<password>'
folder-hook imaps://imap.gmail.com 'set folder=imaps://imap.gmail.com/'
folder-hook imaps://imap.gmail.com 'set smtp_url="smtps://torsneyt@smtp.gmail.com"'
folder-hook imaps://imap.gmail.com 'set postponed=+[GMAIL]/Drafts'
folder-hook imaps://imap.gmail.com 'set trash=+[GMAIL]/Trash'
folder-hook imaps://imap.gmail.com 'unset record' # gmail does this automatically
folder-hook imaps://imap.gmail.com 'set from="Tom Torsney-Weir <torsneyt@gmail.com>"'

# sfu
account-hook imaps://imap.sfu.ca 'set imap_user=ttorsney imap_pass=<password>'
folder-hook imaps://imap.sfu.ca 'set folder=imaps://imap.sfu.ca/'
folder-hook imaps://imap.sfu.ca 'set postponed=Drafts'
folder-hook imaps://imap.sfu.ca 'set record=+Sent'
folder-hook imaps://imap.sfu.ca 'set from="Tom Torsney-Weir <ttorsney@sfu.ca>"'

set imap_list_subscribed
set imap_check_subscribed
set header_cache = ~/.mutt/hcache

set imap_keepalive = 300
set mail_check = 120

